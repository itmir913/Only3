<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/flat_melon_yellow</item>
        <item name="colorPrimary">@color/flat_traffic_yellow</item>
        <item name="colorPrimaryDark">@color/flat_melon_yellow</item>
        <item name="colorControlNormal">#ffffbb33</item><!--holo_orange_light-->
        <item name="colorControlHighlight">#ffff8800</item><!--holo_orange_dark-->

        <item name="android:navigationBarColor">@color/flat_melon_yellow</item>

        <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TranslucentActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
