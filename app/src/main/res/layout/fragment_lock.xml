<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="lee.whdghks913.only3.fragment.LockFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/lockFragment_main_help" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="잠금 시작 시간" />

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/startLockTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/flat_sky_light_blue"
                android:text="여기를 터치하여 시간을 설정하세요" />

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/nowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/flat_sky_light_blue"
                android:text="또는 지금 시간 설정" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="잠금 종료 시간" />

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/finishLockTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/flat_sky_light_blue"
                android:text="여기를 터치하여 시간을 설정하세요" />

        </LinearLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/mLockStartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/flat_sky_light_blue"
            android:layout_gravity="center_horizontal"
            android:text="잠금 시작" />

    </LinearLayout>

</ScrollView>
